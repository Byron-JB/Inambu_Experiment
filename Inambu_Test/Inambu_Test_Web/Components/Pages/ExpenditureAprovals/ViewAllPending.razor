@page "/ExpenditureAprovals/ViewPending"
@using Application.Features.Queries
@using Application.Models.DTO;
@using Application.Models.Enum
@inject MediatR.IMediator _mediator;


<div style="padding-bottom:2rem">
    <!-- Button trigger modal -->
    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#basicModal">
        Add New Expenditure Request
    </button>
</div>

@if (expenditureApprovals is null)
{
    <p>Data is loading</p>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped mb-0">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var expenditureAproval in expenditureApprovals)
                {
                    <tr class="table">
                        <td>@expenditureAproval.requestId</td>
                        <td>@expenditureAproval.Title</td>
                        <td>@expenditureAproval.Description</td>
                        <td>
                            <div class="dropdown">
                                <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-three-dots-vertical" viewBox="0 0 16 16">
                                        <path d="M9.5 13a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0m0-5a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0m0-5a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0" />
                                    </svg>
                                </button>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item" href="@expenditureAproval.requestId"><i class="icon-base ti tabler-pencil me-1"></i>Reject</a>
                                    <a class="dropdown-item" href="@expenditureAproval.requestId"><i class="icon-base ti tabler-trash me-1"></i>Delete</a>
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

}

<CreateExpenditureRequest/>

@code {
    IQueryable<ExpenditureAprovalDTO> expenditureApprovals;

    protected override async Task OnInitializedAsync()
    {
        GetAllExpenditureRequestsQuery query = new GetAllExpenditureRequestsQuery(ExpenditureApprovalFetchTypes.FetchPending);

        expenditureApprovals = (await _mediator.Send(query)).AsQueryable();

    }

}
